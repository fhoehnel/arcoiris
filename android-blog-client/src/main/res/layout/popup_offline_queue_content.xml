<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/queueHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#404080"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10px"
        android:text="@string/offlineQueueHeadline" />

    <ScrollView
        android:id="@+id/queuedFilesScrollCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0e0e0"
        android:layout_weight=".50">

        <LinearLayout
            android:id="@+id/queuedFileList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/queueCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="32sp"
        android:textColor="#202020"
        android:textSize="16sp"
        android:background="@drawable/button_border"
        android:layout_marginTop="50px"
        android:layout_gravity="center_horizontal"
        android:text="@string/buttonClose" />

</LinearLayout>
